//Needs: profileName,
doctype html
html(lang="en")
    head
        include universal/head
        
    body
        include universal/container
    
            form(action='/profile', method='POST')
                .login-group
                    .form-group
                        label.sr-only(for='user') Profile Name
                        input#user.form-control(type='text', name='newuser', placeholder=profileName)
                button.login-button(type='submit') submit
            -if (nameSent) {
                .login-form-main-message.show.success
                    strong Success- 
                    | Check your email for your unique one-time-use login link!
            -}

        include universal/script
